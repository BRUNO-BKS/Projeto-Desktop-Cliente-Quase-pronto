<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.buyo.adminfx.ui.controllers.PaymentsController">
    <top>
        <ToolBar>
            <Label text="Pagamentos" />
            <Separator />
            <Label text="Pedido ID:" />
            <TextField fx:id="orderIdFilter" promptText="ex: 123" prefWidth="80" />
            <Label text="De:" />
            <DatePicker fx:id="dateFrom" />
            <Label text="Até:" />
            <DatePicker fx:id="dateTo" />
            <Button text="Aplicar" onAction="#onApplyFilters" />
            <Button text="Limpar" onAction="#onClearFilters" />
            <Separator />
            <Button text="Registrar Pagamento…" onAction="#onRegisterPayment" />
            <Button text="Histórico…" onAction="#onHistory" />
            <Button text="Atualizar" onAction="#onRefresh" />
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colId" text="#" prefWidth="60" />
                <TableColumn fx:id="colOrderId" text="Pedido" prefWidth="80" />
                <TableColumn fx:id="colAmount" text="Valor" prefWidth="120" />
                <TableColumn fx:id="colMethod" text="Método" prefWidth="120" />
                <TableColumn fx:id="colStatus" text="Status" prefWidth="120" />
                <TableColumn fx:id="colTransaction" text="Transação" prefWidth="180" />
                <TableColumn fx:id="colCreatedAt" text="Criado em" prefWidth="180" />
            </columns>
        </TableView>
    </center>
</BorderPane>
