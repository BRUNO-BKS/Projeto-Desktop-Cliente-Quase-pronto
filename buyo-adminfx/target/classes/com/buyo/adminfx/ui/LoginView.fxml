<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.buyo.adminfx.ui.controllers.LoginController"
            styleClass="root">
    
    <center>
        <VBox alignment="CENTER" spacing="30" maxWidth="420" styleClass="login-container">
            <!-- Cabeçalho com Logo -->
            <VBox alignment="CENTER" spacing="15">
                <!-- Logo Circular -->
                <StackPane alignment="CENTER">
                    <Circle radius="48" fill="#FF6B35" />
                    <Text text="SRO" style="-fx-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;" />
                </StackPane>
                
                <!-- Título e Subtítulo -->
                <VBox alignment="CENTER" spacing="5">
                    <Text style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #e65c00;">StockRO AdminFX</Text>
                    <Text style="-fx-font-size: 14px; -fx-fill: #999999;">Sistema de Gerenciamento</Text>
                </VBox>
            </VBox>
            
            <!-- Formulário de Login -->
            <VBox styleClass="login-form" spacing="20">
                <Text style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-fill: #e65c00; -fx-padding: 0 0 10 0;">Faça login para continuar</Text>
                
                <VBox spacing="8">
                    <Label text="Email" styleClass="label" />
                    <TextField 
                        fx:id="emailField" 
                        promptText="seu@email.com" 
                        styleClass="text-field"
                        style="-fx-pref-height: 42px;" />
                </VBox>
                
                <VBox spacing="8">
                    <Label text="Senha" styleClass="label" />
                    <PasswordField 
                        fx:id="passwordField" 
                        promptText="••••••••" 
                        styleClass="password-field"
                        style="-fx-pref-height: 42px;" />
                </VBox>
                
                <CheckBox fx:id="rememberCheck" text="Lembrar-me" style="-fx-text-fill: #e65c00;" onAction="#onRememberMeAction" />
                
                <Button 
                    text="Entrar" 
                    onAction="#onLogin" 
                    style="-fx-pref-height: 44px; -fx-background-color: #FF6B35; -fx-text-fill: white; -fx-font-weight: bold;" 
                    styleClass="button" 
                    defaultButton="true" />
                
                <Label 
                    fx:id="errorLabel" 
                    styleClass="error-message" 
                    style="-fx-pref-width: 100%; -fx-wrap-text: true;" />
            </VBox>
            
            <!-- Rodapé -->
            <Text styleClass="login-subtitle" style="-fx-font-size: 12px;">
                © 2025 StockRO AdminFX - Todos os direitos reservados
            </Text>
        </VBox>
    </center>
    
    <!-- Removida a referência ao arquivo CSS para evitar conflitos -->
    
</BorderPane>

